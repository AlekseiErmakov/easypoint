<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="1" author="Alexey">
        <createTable tableName="employees">
            <column name="id" type="bigint"/>
            <column name="firstname" type="varchar(256)"/>
            <column name="surname" type="varchar(256)"/>
            <column name="lastname" type="varchar(256)"/>
            <column name="created" type="timestamp"/>
            <column name="updated" type="timestamp"/>
        </createTable>
        <addNotNullConstraint tableName="employees" columnName="id"/>
        <addNotNullConstraint tableName="employees" columnName="firstname"/>
        <addNotNullConstraint tableName="employees" columnName="created"/>
        <addUniqueConstraint tableName="employees" columnNames="id"/>
        <createSequence sequenceName="employee_sequence" incrementBy="50"/>
    </changeSet>
</databaseChangeLog>