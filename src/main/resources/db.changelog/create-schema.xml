<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="1" author="Alexey">
        <createTable tableName="employees">
            <column name="id" type="bigint"/>
            <column name="firstname" type="varchar(255)"/>
            <column name="surname" type="varchar(255)"/>
            <column name="lastname" type="varchar(255)"/>
            <column name="created" type="timestamp"/>
            <column name="updated" type="timestamp"/>
        </createTable>
        <addNotNullConstraint tableName="employees" columnName="id"/>
        <addNotNullConstraint tableName="employees" columnName="firstname"/>
        <addNotNullConstraint tableName="employees" columnName="created"/>
        <addUniqueConstraint tableName="employees" columnNames="id"/>
        <createSequence sequenceName="employee_sequence" incrementBy="50"/>
        <createTable tableName="work_shift_types">
            <column name="id" type="bigint"/>
            <column name="name" type="varchar(255)"/>
            <column name="shortname" type="varchar(255)"/>
            <column name="start_hour" type="integer"/>
            <column name="start_minute" type="integer"/>
            <column name="end_hour" type="integer"/>
            <column name="end_minute" type="integer"/>
            <column name="created" type="timestamp"/>
            <column name="updated" type="timestamp"/>
        </createTable>
        <addNotNullConstraint tableName="work_shift_types" columnName="id"/>
        <addNotNullConstraint tableName="work_shift_types" columnName="name"/>
        <addNotNullConstraint tableName="work_shift_types" columnName="shortname"/>
        <addNotNullConstraint tableName="work_shift_types" columnName="start_hour"/>
        <addNotNullConstraint tableName="work_shift_types" columnName="start_minute"/>
        <addNotNullConstraint tableName="work_shift_types" columnName="end_hour"/>
        <addNotNullConstraint tableName="work_shift_types" columnName="end_minute"/>
        <addNotNullConstraint tableName="work_shift_types" columnName="created"/>
        <addUniqueConstraint tableName="work_shift_types" columnNames="id"/>
        <createSequence sequenceName="work_shift_type_sequence" incrementBy="50"/>
    </changeSet>
</databaseChangeLog>